{
  "name": "@venzee/githubify",
  "bin": {
    "githubify": "lib/index.js"
  },
  "version": "1.0.0",
  "description": "Convert Markdown files to Github compatible ones. Currently supports Mermaid-Diagram-to-SVG conversion",
  "keywords": [
    "diagram", "markdown", "flowchart", "sequence diagram", "gantt", "class diagram", "git graph", "github markdown", "mermaid", "mermaidjs"
  ],
  "scripts": {
    "pretest": "eslint --fix .",
    "test": "npm run run-tests",
    "tdd": "npm run run-tdd",
    "coverage": "nyc npm run run-tests",
    "run-tests": "cross-env LOG_LEVEL=OFF node_modules/mocha/bin/_mocha --require ./spec/.config/bootstrap.js --colors --require babel-core/register './spec/**/*.test.js'",
    "run-tdd": "node_modules/mocha/bin/_mocha --require ./spec/.config/bootstrap.js --watch --colors --require babel-core/register './spec/**/*.test.js'",
    "push_to_coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/venzee/dev-documentation.git"
  },
  "author": "Venzee, Inc.",
  "maintainers": [
    {
      "name": "Markus Westerholz",
      "email": "mwesterholz@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/venzee/dev-documentation/issues"
  },
  "homepage": "https://github.com/venzee/dev-documentation#readme",
  "dependencies": {
    "async": "^2.6.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "lodash": "^4.17.5",
    "mermaid": "^7.1.2",
    "mermaid.cli": "^0.3.6",
    "node-run-cmd": "^1.0.1",
    "object-streaming-tools": "^1.1.1",
    "uuid": "^3.2.1",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-namespaces": "^0.2.4",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "colors": "^1.1.2",
    "cross-env": "^5.1.1",
    "eslint": "^4.7.2",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-varspacing": "^1.1.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "mocha": "^3.5.3",
    "mocha-webpack": "^1.0.1",
    "mock-fs": "^4.4.1",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.14.0",
    "webpack": "^3.8.1"
  }
}
